import dbus
import dbus.service
import gobject
if getattr(dbus, 'version', (0,0,0)) >= (0,41,0):
    import dbus.glib

import sys
from gpodder.libgpodder import gPodderLibClass


def main():
    bus = dbus.SessionBus()
    bus_name = dbus.service.BusName('net.perli.gpodder.GPodderApp', bus=bus)
    gpodderlib = gPodderLibClass(bus_name)
    gpodderlib.run()

if __name__=='__main__':
    main()
